{
  "extends": ["tslint-config-standard"],
  "rules": {
    "no-floating-promises": [
      true,
      "Promise",
      "Q.Promise"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "jsx-double"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "eofline": true
  }
}